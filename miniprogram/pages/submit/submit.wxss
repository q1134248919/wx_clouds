.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-uploader {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}

.uploader__img {
  width: 100px;
  height: 100px;
  border-radius: 10px;
}

.weui-uploader__input-box {
  width: 100px;
  height: 100px;
  border: 1px solid rgb(0, 0, 0);
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.weui-uploader__input {
  width: 100%;
  height: 100%;
  background-size: 24px 24px;
}

.page-section {
  margin-bottom: 20px;
}

.weui-cells__title {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}

.weui-input,
.weui-textarea {
  width: 90%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}

.btn-area {
  margin-top: 30px;
  text-align: center;
}

.btn {
  width: 40%;
  padding: 5px;
  border: none;
  border-radius: 4px;
  background-color: #1aad19;
  color: white;
  font-size: 16px;
  cursor: pointer;
}

.btn:hover {
  background-color: #179b16;
}
